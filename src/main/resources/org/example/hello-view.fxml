<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label id="welcomeText" fx:id="welcomeText">Please Enter Your Information</Label>
    <VBox alignment="CENTER_LEFT" >
        <padding>
            <Insets left="20" right="20"/>
        </padding>
        <Label id="idText" fx:id="idText">ID:</Label>
        <TextField fx:id="idField"/>
        <Label fx:id="nameText">Name:</Label>
        <TextField fx:id="nameField"/>
        <Label fx:id="ageText">Age:</Label>
        <TextField fx:id="ageField"/>
        <Label fx:id="cityText">City:</Label>
        <TextField fx:id="cityField"/>
    </VBox>
    <HBox>
        <Button fx:id="addButton" onAction="#handleAdd">Add</Button>
        <Button fx:id="updateButton" onAction="#handleUpdate">Update</Button>
        <Button fx:id="readButton" onAction="#handleRead">Read</Button>
        <Button fx:id="deleteButton" onAction="#handleDelete">Delete</Button>
    </HBox>
</VBox>
